<section class="add-product-section">
    <h1 class = "title">Add product</h1>
    
    <div class="add-product-container">
        <div class="img-upload-container">
            <img id = "backgound-upload"src="" alt="" srcset="">
            <input type="file" name="upload-img" id="upload-img" accept="image/png , image/jpeg"> 
            <label for="upload-img" class="upload-overlay">Upload Image</label>
        </div>
        <div class="info-product">
            <input type="text" name="product-name" id="product-name" placeholder="Product name">
            <input type="text" name="short-description" id="short-description" placeholder="Short description">
            <input type="text" name="price" id="price" placeholder="Price" id="price">
            <div class="ratings disable">
                <img src="/img/fill star.png" alt="" srcset="">
                <img src="/img/fill star.png" alt="" srcset="">
                <img src="/img/fill star.png" alt="" srcset="">
                <img src="/img/fill star.png" alt="" srcset="">
                <img src="/img/no fill star.png" alt="" srcset="">
                <span class="count-star">1234  reviews</span>
            </div>
        </div>
    </div>

    <div class="description-container">
        <textarea id="description" name="description" placeholder="Description"></textarea>
    </div>

    <div class="tag-container">
        <textarea id="tag" name="tag" placeholder="Tag"></textarea>
    </div>

    <div class="button">
        <button class="btn" id="add-product-btn">Add Product</button>
    </div>
    
    <div class="error">
    </div>
</section>
    

<script src="/js/add-product.js"></script>